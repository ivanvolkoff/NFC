<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt_input_value"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_plain_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:textSize="25dp"
        android:text="Value to save:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txt_input_value"
        app:layout_constraintEnd_toEndOf="@+id/txt_input_value"
        app:layout_constraintStart_toStartOf="@+id/txt_input_value" />

    <Button
        android:id="@+id/btn_write"
        android:layout_width="88dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:text="Write"
        app:layout_constraintEnd_toEndOf="@+id/txt_input_value"
        app:layout_constraintStart_toStartOf="@+id/txt_input_value"
        app:layout_constraintTop_toBottomOf="@+id/txt_input_value" />

    <TextView
        android:id="@+id/txt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Value:"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_write" />

    <TextView
        android:id="@+id/txt_presentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="unknown"
        android:textColor="#ED0F0F"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_write" />

</androidx.constraintlayout.widget.ConstraintLayout>